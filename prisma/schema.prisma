generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tutor {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  cpf         String            @unique
  email       String            @unique
  usuario     String            @unique
  senha       String
  alunos      TutorAluno[]
  disciplinas TutorDisciplina[]
}

model Aluno {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  nome    String
  cpf     String       @unique
  email   String       @unique
  usuario String       @unique
  senha   String
  tutores TutorAluno[]
}

model Disciplina {
  id      String            @id @default(auto()) @map("_id") @db.ObjectId
  nome    String
  tutores TutorDisciplina[]
}

model TutorAluno {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  tutorId String @db.ObjectId
  alunoId String @db.ObjectId

  tutor Tutor @relation(fields: [tutorId], references: [id])
  aluno Aluno @relation(fields: [alunoId], references: [id])

  @@unique([tutorId, alunoId])
}

model TutorDisciplina {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  tutorId      String @db.ObjectId
  disciplinaId String @db.ObjectId

  tutor      Tutor      @relation(fields: [tutorId], references: [id])
  disciplina Disciplina @relation(fields: [disciplinaId], references: [id])

  @@unique([tutorId, disciplinaId])
}
